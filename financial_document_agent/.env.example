# Financial Document Agent Configuration
# Copy this file to .env and fill in your values

# OpenAI API Configuration
FA_OPENAI_API_KEY=
# LLM Model Configuration
FA_LLM_MODEL=gpt-4o
FA_LLM_MAX_TOKENS=4096
FA_LLM_TEMPERATURE=0.0

# OCR Configuration
# Options: openai_vision, tesseract, auto (tries openai first, falls back to tesseract)
FA_OCR_STRATEGY=openai_vision

# Financial Evaluation Configuration
FA_WORTHINESS_THRESHOLD_EUR=10000.00

# Exchange Rate Configuration
FA_EXCHANGE_CACHE_TTL_HOURS=1
FA_EXCHANGE_API_URL=https://api.frankfurter.app

# Processing Limits
FA_MAX_FILE_SIZE_MB=50
FA_MAX_PDF_PAGES=50

# Logging Configuration
FA_LOG_LEVEL=INFO
FA_LOG_FORMAT=json